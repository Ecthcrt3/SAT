@model SAT.DATA.EF.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}
<section class="contact_section layout_padding">

    <div class="heading_container my-4">
        <h3 class="text-danger">
            Are you sure you want to delete:
        </h3>
        <h2>@Model.CourseName</h2>
    </div>



    <div class="">
        <div class="px-5">
            <div class="row justify-content-center">
                <div class="col-md-4">

                    <div>
                        <h4>Course</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.CourseName)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.CourseName)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.CourseDescription)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.CourseDescription)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.CreditHours)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.CreditHours)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Curriculum)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Curriculum)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Notes)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Notes)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.IsActive)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.IsActive)
                            </dd>
                        </dl>
                    </div>

                    <div>
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="CourseId" />
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <a class="btn btn-dark" asp-action="Index">Cancel</a>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>

</section>
