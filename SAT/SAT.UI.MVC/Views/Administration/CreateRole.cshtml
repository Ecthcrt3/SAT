@model CreateRoleViewModel
@{
    ViewData["Title"] = "Create a Role";
}

<section class="contact_section layout_padding">

    <div class="heading_container my-4">
        <h4>Create New: </h4>
        <h2>
            Role
        </h2>

    </div>
    <div class="">
        <div class="px-5">
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <form asp-action="CreateRole" method="post" class="mt-3">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group row">
                            <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="RoleName" class="form-control" placeholder="Name" />
                                <span asp-validation-for="RoleName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-10">
                                <input type="submit" class="btn btn-dark" value="Create"/>
                                <a class="btn btn-dark" asp-action="Index">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


