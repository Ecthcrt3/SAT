@model SAT.UI.MVC.Models.ContactViewModel
@{
    ViewData["Title"] = "Contact";
}


  <!-- contact section -->

  <section class="contact_section layout_padding">
    <div class="container">

      <div class="heading_container">
        <h2>
          Send us a Message!
        </h2>
      </div>
      <div class="">
        <div class="">
          <div class="row">
            <div class="col-md-9 mx-auto">
              <div class="contact-form">
                <form asp-action="Contact">
                  <div>
                      <input asp-for="Name" class="form-control" placeholder="Name"/>
                  </div>
                  <div>
                      <input asp-for="Subject" class="form-control" placeholder="Subject"/>
                  </div>
                  <div>
                      <input asp-for="Email" class="form-control" placeholder="Email Address"/>
                  </div>
                  <div>
                    <textarea asp-for="Message" class="form-control" rows="7" placeholder="Enter your message here. . . "></textarea>
                  </div>
                  <div class="d-flex justify-content-center">

                    <input type="submit" value="Send" class="btn_on-hover" />
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="map_img-box">
        <img src="images/map-img.png" alt="">
      </div>
    </div>
  </section>


  <!-- end contact section -->
